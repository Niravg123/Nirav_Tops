package Petttern;

public class Pettern6 {
public static void main(String[] args) {
	
	int lines = 9;
	int spacecount = 1;
	int starcount = lines-1;
	int mid=(lines/2)+1;
	
	for(int j=1;j<=lines;j++)
	{
		for(int k=1;k<=starcount;k++)
		{
			System.out.print("*");
		}
		for(int i=1;i<=spacecount;i++)
		{
			System.out.print(" ");
		}
		System.out.println();
		if(j<mid)
		{
			spacecount=spacecount+2;
			starcount--;
		}
		else
		{
			spacecount=spacecount-2;
			starcount++;
		}
	}
}
}
